# ============= DATABASE CONFIGURATION =============
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://deepvariance:deepvariance@localhost:5432/deepvariance

# ============= API CONFIGURATION =============
API_HOST=0.0.0.0
API_PORT=8000

# ============= GROQ API KEY =============
# GROQ API Key (for LLM-based CNN model generation)
GROQ_API_KEY=your_groq_api_key_here

# ============= CORS CONFIGURATION =============
# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============= STORAGE PATHS =============
DATA_DIR=./data
MODELS_DIR=./models
RESULTS_DIR=./results

# ============= TRAINING CONFIGURATION =============
DEFAULT_MAX_ITERATIONS=10
DEFAULT_TARGET_ACCURACY=1.0

# Default training device (cpu, cuda, mps)
DEFAULT_DEVICE=cpu

# ============= LOGGING =============
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable SQL query logging (set to false in production)
SQL_ECHO=false
